extends ../layout

block content
  -var action = post ? "/posts/edit/"+post.id : "/posts/create"
  -var title = post ? post.title : ''
  -var body = post ? post.body : ''
  form(method="post", action=action)
    ul
      li
        label(for="title") Title
        br
        input#title(name="title", value=title)
      li
        label(for="body") Body
        br
        textarea#body(name="body")= body
      li
        input(type="submit", value="Save")
